<Page x:Class="ScoutingApp_2018.Home_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ScoutingApp_2018"
      mc:Ignorable="d" 
      d:DesignHeight="768" d:DesignWidth="1024"
      Title="Home_Page">
	<Grid Background="#1F1F1F">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition/>
		</Grid.ColumnDefinitions>

		<Grid Background="#AA3939">
			<StackPanel Grid.Row="0">
				<Button Width="200" Height="100" FontSize="36" Click="Scouting_Button_Click">Scouting</Button>
				<Button Width="200" Height="100" FontSize="36" Click="Data_Button_Click">Data</Button>
			</StackPanel>
		</Grid>
	</Grid>
</Page>
